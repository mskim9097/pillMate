<header class="bg-white border-bottom">
    <nav class="navbar container py-2">
        <a class="navbar-brand d-flex align-items-center gap-2" href="<%= authenticated ? '/main' : '/' %>">
            <img src="/favicon.png" alt="DailyDose logo" width="28" height="28" class="pill" />
            <span>PillMate</span>
        </a>
        <div class="d-flex align-items-center gap-2">
            <% if (authenticated) { %>
                <a class="btn btn-outline-success btn-sm" href="/profile">Profile</a>
                <form class="ms-2" method="POST" action="/logout">
                    <button class="btn btn-danger btn-sm" type="submit">Log out</button>
                </form>
                <% } else { %>
                    <a class="btn btn-success btn-sm" href="/login">Log in</a>
                    <% } %>
        </div>
    </nav>
</header>