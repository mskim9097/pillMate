<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Dashboard ‚Äì DailyDose</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body class="bg-light">
    <header class="bg-white border-bottom">
        <div class="container d-flex align-items-center justify-content-between py-3">
            <a class="d-inline-flex align-items-center gap-2 text-decoration-none" href="/">
                <span class="pill-icon">üíä</span>
                <span class="fw-bold text-success">DailyDose</span>
            </a>
            <form class="m-0" method="POST" action="/logout">
                <button type="submit" class="btn btn-danger">Log out</button>
            </form>
        </div>
    </header>

    <main class="container py-4">
        <!-- Welcome -->
        <section class="mb-3">
            <div class="alert alert-success d-flex align-items-center gap-3 m-0">
                <div>üåø</div>
                <div>
                    <h1 class="h5 fw-bold m-0">Welcome, <%= user?.fName || 'Friend' %>!</h1>
                    <small class="text-muted">Your timezone: <strong>
                            <%= user?.tz || 'America/Vancouver' %>
                        </strong></small>
                </div>
            </div>
        </section>

        <div class="row g-3">
            <!-- Today‚Äôs times -->
            <section class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h2 class="h6 text-success fw-bold m-0">Today‚Äôs times</h2>
                            <button class="btn btn-success" id="btn-new-supplement" type="button" data-bs-toggle="modal"
                                data-bs-target="#supplementModal">
                                + New Supplement
                            </button>
                        </div>

                        <% if (typeof times !=='undefined' && times?.length) { %>
                            <ul class="list-group" id="today-list">
                                <% times.forEach(t=> { const isTaken = (t.status === 'TAKEN'); %>
                                    <li class="list-group-item d-flex align-items-center justify-content-between"
                                        data-log-id="<%= t.id %>" data-supplement-id="<%= t.supplementId %>"
                                        data-local-time="<%= t.localTime %>">
                                        <div>
                                            <strong>
                                                <%= t.localTime %>
                                            </strong> ‚Äî <%= t.supplementName %>
                                        </div>
                                        <button
                                            class="mark-btn btn <%= isTaken ? 'btn-outline-secondary' : 'btn-success' %>"
                                            <%=isTaken ? 'data-status="TAKEN"' : 'data-status="PENDING"' %>>
                                            <%= isTaken ? '‚úî Taken' : 'Mark as Taken' %>
                                        </button>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } else { %>
                                <p class="text-muted mb-0">No times scheduled for today.</p>
                                <% } %>
                    </div>
                </div>
            </section>

            <!-- My supplements -->
            <section class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="h6 text-success fw-bold mb-2">My supplements</h2>
                        <% if (typeof supplements !=='undefined' && supplements?.length) { %>
                            <ul class="list-group">
                                <% supplements.forEach(s=> { %>
                                    <li class="list-group-item d-flex align-items-center justify-content-between">
                                        <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2">
                                            <strong>
                                                <%= s.name %>
                                            </strong>
                                            <span class="badge-strong">
                                                <%= s.dosage || '‚Äî' %>
                                            </span>
                                        </div>
                                        <button class="btn btn-outline-success" data-bs-toggle="modal"
                                            data-bs-target="#supplementModal" data-id="<%= s.id %>">
                                            Edit
                                        </button>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } else { %>
                                <p class="text-muted mb-0">No supplements yet. Click ‚Äú+ New Supplement‚Äù.</p>
                                <% } %>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Create/Edit modal -->
    <div class="modal fade" id="supplementModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <form class="modal-content" id="supplement-form" method="POST" action="/supplements">
                <div class="modal-header">
                    <h5 class="modal-title" id="supplement-modal-title">Add Supplement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="id" id="supplement-id" />

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input class="form-control" name="name" id="supplement-name" placeholder="Vitamin D3"
                            required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Dosage</label>
                        <div class="d-flex flex-wrap gap-2">
                            <input class="form-control" id="supplement-dosage-number" type="number" min="0" step="0.5"
                                placeholder="e.g., 500" style="max-width:160px;" />
                            <select class="form-select" id="supplement-dosage-unit" style="max-width:180px;">
                                <option value="">(unit)</option>
                                <option value="mg">mg</option>
                                <option value="mcg">mcg</option>
                                <option value="g">g</option>
                                <option value="IU">IU</option>
                                <option value="ml">ml</option>
                                <option value="capsules">capsules</option>
                                <option value="tablets">tablets</option>
                                <option value="drops">drops</option>
                            </select>
                        </div>
                        <input type="hidden" name="dosage" id="supplement-dosage" />
                        <div class="form-text">e.g., 500 mg, 2 tablets, 2000 IU</div>
                    </div>

                    <div class="mb-2 d-flex align-items-center justify-content-between">
                        <label class="form-label mb-0">Times (local)</label>
                        <button class="btn btn-outline-success btn-sm" id="add-time" type="button">+ Add time</button>
                    </div>

                    <div id="time-list" class="d-grid gap-2"></div>
                    <div class="form-text">e.g., 08:00, 13:30, 22:00</div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-outline-danger me-auto d-none" id="btn-delete" type="button">Delete</button>
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-success" id="btn-save" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/supplements.js"></script>
    <script src="/js/today.js"></script>
</body>

</html>