<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: 'Dashboard ‚Äì DailyDose' }) %>

    <body>
        <%- include('partials/header') %>

            <main class="container my-4">
                <section class="welcome p-3 rounded-3 border d-flex align-items-center gap-3 bg-white">
                    <div>üåø</div>
                    <div>
                        <h1 class="h4 m-0 text-success">Welcome, <%= user?.fName || 'Friend' %>!</h1>
                        <p class="mb-0 text-muted">
                            Your timezone: <strong>
                                <%= user?.tz || 'America/Vancouver' %>
                            </strong>
                        </p>
                    </div>
                </section>

                <!-- Today first -->
                <section class="grid mt-3">
                    <div class="card col-12 p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="h5 mb-0 text-success">Today‚Äôs times</h2>
                            <button class="btn btn-success" id="btn-new-supplement" type="button" data-bs-toggle="modal"
                                data-bs-target="#supplementModal">
                                + New Supplement
                            </button>
                        </div>

                        <% if (typeof times !=='undefined' && times?.length) { %>
                            <ul class="list mt-3" id="today-list">
                                <% times.forEach(t=> { const isTaken = (t.status === 'TAKEN'); %>
                                    <li class="d-flex justify-content-between align-items-center p-2 border rounded-3 mb-2"
                                        data-log-id="<%= t.id %>" data-supplement-id="<%= t.supplementId %>"
                                        data-local-time="<%= t.localTime %>">
                                        <div>
                                            <strong>
                                                <%= t.localTime %>
                                            </strong> ‚Äî <%= t.supplementName %>
                                                <% if (t.dosage && t.dosage.trim()) { %>
                                                    <span class="badge badge-strong ms-2">
                                                        <%= t.dosage %>
                                                    </span>
                                                    <% } %>
                                        </div>

                                        <button
                                            class="mark-btn btn <%= isTaken ? 'btn-outline-secondary' : 'btn-success' %>"
                                            <%=isTaken ? 'data-status="TAKEN"' : 'data-status="PENDING"' %>
                                            >
                                            <%= isTaken ? '‚úî Taken' : 'Mark as Taken' %>
                                        </button>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } else { %>
                                <p class="text-muted mt-2 fst-italic">No times scheduled for today.</p>
                                <% } %>
                    </div>
                </section>

                <!-- My supplements -->
                <section class="grid mt-3">
                    <div class="card col-12 p-3">
                        <h2 class="h5 text-success">My supplements</h2>
                        <% if (typeof supplements !=='undefined' && supplements?.length) { %>
                            <ul class="list mt-2">
                                <% supplements.forEach(s=> { %>
                                    <li
                                        class="d-flex justify-content-between align-items-center p-2 border rounded-3 mb-2">
                                        <div>
                                            <strong>
                                                <%= s.name %>
                                            </strong>
                                            <!-- dosage badge removed here -->
                                        </div>
                                        <button class="btn btn-success px-3" data-bs-toggle="modal"
                                            data-bs-target="#supplementModal" data-id="<%= s.id %>">
                                            Edit
                                        </button>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } else { %>
                                <p class="text-muted fst-italic">No supplements yet. Click ‚Äú+ New Supplement‚Äù.</p>
                                <% } %>
                    </div>
                </section>
            </main>

            <!-- Create/Edit modal -->
            <div class="modal fade" id="supplementModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <form class="modal-content" id="supplement-form" method="POST" action="/supplements">
                        <div class="modal-header">
                            <h5 class="modal-title" id="supplement-modal-title">Add Supplement</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <input type="hidden" name="id" id="supplement-id" />

                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input class="form-control" name="name" id="supplement-name" placeholder="Vitamin D3"
                                    required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Dosage</label>
                                <div class="d-flex gap-2">
                                    <input class="form-control" id="supplement-dosage-number" type="number" min="0"
                                        step="0.5" placeholder="e.g., 500" style="max-width:160px;" />
                                    <select class="form-select" id="supplement-dosage-unit" style="max-width:180px;">
                                        <option value="">(unit)</option>
                                        <option value="mg">mg</option>
                                        <option value="mcg">mcg</option>
                                        <option value="g">g</option>
                                        <option value="IU">IU</option>
                                        <option value="ml">ml</option>
                                        <option value="capsules">capsules</option>
                                        <option value="tablets">tablets</option>
                                        <option value="drops">drops</option>
                                    </select>
                                </div>
                                <input type="hidden" name="dosage" id="supplement-dosage" />
                                <div class="form-text">e.g., 500 mg, 2 tablets, 2000 IU</div>
                            </div>

                            <div class="mb-2 d-flex align-items-center justify-content-between">
                                <label class="form-label mb-0">Times (local)</label>
                                <button class="btn btn-outline-success btn-sm" id="add-time" type="button">+ Add
                                    time</button>
                            </div>

                            <div id="time-list" class="d-grid gap-2"></div>
                            <div class="form-text">e.g., 08:00, 13:30, 22:00</div>
                        </div>

                        <div class="modal-footer">
                            <button class="btn btn-outline-danger me-auto d-none" id="btn-delete"
                                type="button">Delete</button>
                            <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                            <button class="btn btn-success" id="btn-save" type="submit">Save</button>
                        </div>
                    </form>
                </div>
            </div>

            <%- include('partials/footer') %>
                <%- include('partials/footer-scripts', { extraScripts: ['/js/supplements.js', '/js/today.js' ] }) %>
    </body>

</html>